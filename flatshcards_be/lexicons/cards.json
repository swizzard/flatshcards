{
  "lexicon": 1,
  "id": "xyz.flatshcards.cards",
  "defs": {
    "card": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "description": "a single flashcard",
        "required": [
          "backLang",
          "backText",
          "createdAt",
          "frontLang",
          "frontText",
          "stackId"
        ],
        "properties": {
          "backLang": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2,
            "maxGraphemes": 2
          },
          "backText": {
            "type": "string",
            "minLength": 1,
            "maxLength": 4096
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "frontLang": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2,
            "maxGraphemes": 2
          },
          "frontText": {
            "type": "string",
            "minLength": 1,
            "maxLength": 4096
          },
          "stackId": {
            "type": "string",
            "format": "record-key"
          }
        }
      }
    },
    "stack": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "description": "a stack of flashcards",
        "required": ["createdAt", "label"],
        "properties": {
          "backLang": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2,
            "maxGraphemes": 2
          },
          "frontLang": {
            "type": "string",
            "minLength": 2,
            "maxLength": 2,
            "maxGraphemes": 2,
            "default": "en"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "label": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          }
        }
      }
    }
  }
}
